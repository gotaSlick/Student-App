<% include header %>
<h1><%= student.name %> 's page</h1>
<form method="post" action="/students/profile/<%= student._id %>">
	<p><%= message %></p> <!-- the = is to say that it's gonna be a variable -->
	<label for="name">Name: </label>
	<input type="text" name="name" value="<%= student.name %>">
	<label for="age">Age: </label>
	<input type="number" name="age" value="<%= student.age %>">
	<label for="sex">Sex: </label>
	<input type="text" name="sex" value="<%= student.sex %>">
	<label for="country">Country: </label>
	<input type="text" name="country" value="<%= student.country %>">
	<button type="submit">Edit</button>
	<button type="button" class="deleteButton" id="<%= student._id %>">Delete</button>
</form>
<a href="/students">Home</a>
<script src="/main.js">
	
</script>
<% include footer %>